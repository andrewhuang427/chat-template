generator client {
  provider = "prisma-client"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Chat {
  id        String    @id @default(uuid())
  name      String
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  messages  Message[]
}

enum MessageRole {
  USER
  ASSISTANT
}

model Message {
  id      String      @id @default(uuid())
  role    MessageRole
  content String
  chatId  String
  chat    Chat        @relation(fields: [chatId], references: [id])
}
